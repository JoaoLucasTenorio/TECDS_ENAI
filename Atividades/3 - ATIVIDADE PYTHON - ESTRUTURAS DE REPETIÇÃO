while True:
    nota = int(input("Digite uma nota entre zero e dez: "))

    if 0 <= nota <= 10:
        print("Nota válida")
        break
    else:
        print("Valor inválido. Por favor, digite uma nota entre zero e dez.")

"""Questão 2"""

usuario = str(input('digite o seu nome de usuário:  '))
senha = str(input('digite a sua senha de usuário: '))

if usuario == senha:
  print ('Não pode o nome do usuário ser igual a senha ')
  usuario = str(input('digite novamente outro nome de usuário: '))
  senha = str(input('digite novamente outra senha:  '))
  print('usuario registrado')
else:
  print('usuário registrado')

"""Questão 3"""

print("números de 1 a 20, um abaixo do outro:")
for i in range(1,21):
    print(i)

print("números de 1 a 20, um do lado do outro:")
for i in range(1,21):
      print(i, end =" ")

"""Questão 4"""

maiornumero = None

for i in range(5):
    numero = int(input(f"Digite o {i+1}º número: "))

    if maiornumero is None or numero > maiornumero:
        maiornumero = numero

print(f"O maior número digitado é: {maiornumero}")

"""Questão 5"""

soma = 0
for num in range(5):
 numero = int(input("Digite um número: "))
 soma += numero

media = soma / 5

print(f"A soma dos números é {soma}, e a média é {media}")

"""Questão 6"""

i= 1
while i < 100:
  print(i)
  i = i + 2

"""Questão 7"""

num1 = int(input("Digite um númeor: "))
num2 = int(input("Digite um segund número: "))

num3 = int(num1)
num4 = int(num2)

for num in range(num3, num4 + 1):
  print(num)

"""Questão 8"""

tabuada=int(input("Tabuada do numero: "))

for numero in range(10):
    print("%d x %d = %d" % (tabuada, numero+1, tabuada*(numero+1)) )

"""Questão 9"""

base = int(input("Digite a base da operação: "))
expo = int(input("Digite o expoente da operação: "))
resu = 1

for numero in range(expo):
  resu *= base
print("O resultado é: ", resu)

"""Questão 10"""

par = 0
impar = 0

for i in range(10):
    numero = int(input(f"Digite o {i+1}º número inteiro: "))

    if numero % 2 == 0:
     par += 1
    else:
     impar += 1

print(f"Quantidade de números pares: {par}")
print(f"Quantidade de números ímpares: {impar}")

